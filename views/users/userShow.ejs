<% layout('layouts/boilerplate')%>
<h1 class = username><%= user.username %></h1>
<div class = user-page>
    <ul class = user-page-list>
        <% paginatedArt.forEach(function(artpiece){%>
            
                <li class = list-element> 
                    <a href="/artpieces/<%=artpiece._id%>">
                        <img class = gallery-img src="<%= artpiece.image.url %> ">
                        <h1 class = img-title><%= artpiece.title %> </h1>
                    </a>
                </li>
            
        <%})%>
    </ul>
</div>
<% if(totalLength > 9) {%> 
    <div class = 'page-bar'>
        <% for(let i = 1 ; i <= Math.ceil(totalLength/9); i++) {%> 
            <a class = 'page-href' href="/user/<%=user._id%>?page=<%=i%> &limit=9"><%=i%> </a>
        <%}%>
        
    </div>
    <p class = user-page-number>Page  <%=page%> of <%=Math.ceil(totalLength/9)%></p>
<%}%>